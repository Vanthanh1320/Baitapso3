<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/et_bg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/anhnen"
            android:id="@+id/img_capnhatnha_440"
            android:scaleType="centerCrop"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Tiêu đề"
            android:gravity="left"
            android:id="@+id/tv_tencapnhat_440"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/img_tieude_440"
            android:layout_marginBottom="5dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Tiêu đề"
            android:gravity="left"
            android:id="@+id/tv_motacapnhat_440"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/img_tenuudai_440"
            android:layout_marginBottom="5dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Chi tiết"
            android:textSize="12dp"
            android:textColor="@color/orange"
            android:background="@drawable/et_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</RelativeLayout>