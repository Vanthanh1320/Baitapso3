<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="380dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/khungtieude_440"
        android:background="#fff"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/imageavata_440"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/thucan1">
        </ImageView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ten_440"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mít sấy"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/gia_440"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20.000 đ"
                android:layout_below="@id/ten_440"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_favorite_border_24"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/gia_440"
                android:layout_marginLeft="20dp" />

            <TextView
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yêu thích"
                android:layout_below="@id/gia_440"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="10dp"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/imb_close_440"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="160dp"
            android:background="@null"
            android:src="@drawable/ic_baseline_close_24" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giớ thiệu món"
        android:padding="10dp"
        android:textColor="#000"
        android:background="#D2D1D7"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="Khi 'ăn vặt' đã trở thành xu thế, thì sao có thể bỏ qua mít sấy cực ngon của Nhà. Mít sấy khô vàng ươm giòn rụm, khi ăn vẫn giữ nguyên được vị ngọt lịm của mít tươi. Đến Nhà trò chuyện rôm rã và thưởng thức mít sấy để cho câu chuyện thêm giòn thêm vui ngay thôi!"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#000"
        android:textSize="14dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_remove_circle_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:text="1"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="25dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_add_circle_24"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF9501"
            android:text="20.000 đ"
            android:textColor="#fff"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="100dp"/>

    </LinearLayout>

</LinearLayout>