<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="185dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@drawable/et_bg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/anhnen"
            android:id="@+id/img_traicay_440"
            android:scaleType="centerCrop"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiêu đề"
            android:gravity="left"
            android:id="@+id/tv_tentraicay_440"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:layout_marginRight="5dp"/>

        <View
            android:id="@+id/view_line_440"
            android:layout_width="220dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:background="#515050" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiêu đề"
            android:drawableEnd="@drawable/ic_baseline_add_circle_outline_24"
            android:gravity="left"
            android:layout_marginRight="10dp"
            android:textColor="#000"
            android:id="@+id/tv_giatraicay_440"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

</RelativeLayout>