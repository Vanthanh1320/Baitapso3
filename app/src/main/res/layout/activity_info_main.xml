<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoMain"
    android:orientation="vertical"
   android:background="#f1f0f6">

    <RelativeLayout
        android:id="@+id/layer1440"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#fff">

        <RelativeLayout
            android:id="@+id/imageuser_440"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageavata_440"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/avatar">
            </de.hdodenhof.circleimageview.CircleImageView>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageuser_440"
            android:layout_marginBottom="10dp"
            android:text="Văn Thành"
            android:textSize="20dp"
            android:id="@+id/tv_ten_440"
            android:fontFamily="sans-serif-medium"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ten_440"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="110dp"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/dau"
             />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="1dp"
                android:text="| Khách hàng mới"
                android:textSize="18dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/im_back_440"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_cancel_24"
            android:background="@null"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi"
            android:textColor="#2196F3"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginLeft="170dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:padding="5dp"
            android:textSize="16dp"
            android:textColor="#D2D1D7"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Võ Văn Thành"
            android:textSize="18dp"
            android:padding="5dp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh"
            android:padding="5dp"
            android:textSize="16dp"
            android:textColor="#D2D1D7"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/03/2000"
            android:textSize="18dp"
            android:padding="5dp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:padding="5dp"
            android:textSize="16dp"
            android:textColor="#D2D1D7"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0774794604"
            android:textSize="18dp"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>